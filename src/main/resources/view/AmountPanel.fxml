<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      spacing="16" styleClass="amount-panel" alignment="CENTER_LEFT">
    <padding>
        <Insets top="8" right="12" bottom="8" left="12"/>
    </padding>

    <!-- Total earned -->
    <VBox spacing="2" styleClass="amount-box">
        <Label text="Total earned for month" styleClass="amount-title"/>
        <Label fx:id="totalEarned" styleClass="amount-earned"/>
    </VBox>

    <!-- Divider -->
    <Label text="|" styleClass="amount-divider"/>

    <!-- Total unpaid -->
    <VBox spacing="2" styleClass="amount-box">
        <Label text="Total unpaid" styleClass="amount-title"/>
        <Label fx:id="totalUnpaid"/>
    </VBox>
</HBox>
